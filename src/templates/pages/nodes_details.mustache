{{#node}}
  <div class="box has-background-white">
    <h2 class="mb-0">
      <span class="icon-text">
        <span class="icon mr-4">
          <i class="fa-solid fa-{{icon}}"></i>
        </span>
        <span>{{name}}</span>
      </span>
    </h2>
  </div>

  <div class="tile is-ancestor">
    <div class="tile is-6 is-parent">
      <div class="tile is-child box has-background-white">
        <h3>dienstregeling</h3>

        {{#nodeRoutes}}
          <div class="journey-row">
            {{> components/journey_cell_route}}

            {{#stop.platform}}
              {{> components/journey_cell_platform}}
            {{/stop.platform}}
          </div>
        {{/nodeRoutes}}
      </div>
    </div>

    <div class="tile is-6 is-parent">
      <div class="tile is-child box has-background-white">
        <h3>voorzieningen</h3>

        <p>To be uitgebreided</p>
      </div>
    </div>
  </div>
{{/node}}
