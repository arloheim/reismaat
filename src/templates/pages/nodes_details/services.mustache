<div class="tile is-child box has-background-white">
  <h3>voorzieningen</h3>

  {{#services}}
    <div class="media is-align-items-center my-2 pt-2">
      <div class="media-left">
        <span class="icon is-large {{#color}}has-text-{{.}}-dark{{/color}}">
          <i class="fa-solid fa-2x fa-{{icon}}"></i>
        </span>
      </div>

      <div class="media-content">
        <p class="mb-0">{{name}}</p>

        {{#type.agency}}
          <p class="is-muted is-size-7">{{name}}</p>
        {{/type.agency}}
      </div>
    </div>
  {{/services}}

  {{^services}}
    <p>Voor deze halte zijn er geen voorzieningen bekend.</p>
  {{/services}}
</div>
