{{#route}}
  <div class="box has-background-white">
    <h2 class="mb-0">
      <span class="icon-text">
        <span class="icon mr-4">
          <i class="fa-solid fa-{{icon}}"></i>
        </span>
        <span>{{& longDisplayLinkHtml}}</span>
      </span>
    </h2>
  </div>

  <div class="tile is-ancestor">
    <div class="tile is-6 is-parent">
      <div class="tile is-child box has-background-white">
        <h3>haltes</h3>

        <table class="table is-narrow">
          <tr>
            <th class="has-text-right" style="width:15%">Tijd</th>
            <th style="width:70%">Stop</th>
            <th style="width:15%">Spoor</th>
          </tr>

          {{#stops}}
            <tr>
              {{^cancelled}}
                <td class="has-text-right">{{cumulativeTime}}</td>
                <td>{{& node.shortDisplayLinkHtml}}</td>
                <td>{{platform}}</td>
              {{/cancelled}}

              {{#cancelled}}
                <td class="has-text-right">{{cumulativeTime}}</td>
                <td>{{& node.shortDisplayLinkHtml}} <span class="has-text-weight-bold has-text-danger-dark">(vervalt)</span></td>
                <td>&nbsp;</td>
              {{/cancelled}}
            </tr>
          {{/stops}}
        </table>
      </div>
    </div>
  </div>
{{/route}}

{{^route}}
  <div class="box has-background-white">
    <h2 class="mb-2">
      <span class="icon-text">
        <span class="icon mr-4">
          <i class="fa-solid fa-timeline"></i>
        </span>
        <span>dienstregeling</span>
      </span>
    </h2>

    <p>Hier vind je informatie over trein, metro en tram en een overzicht van alle lijnen en vervoerders.</p>
  </div>

  {{#routes}}
    <div class="box has-background-white">
      <h4 class="mb-2">{{{agency.name}}}</h4>

      <div class="columns is-multiline">
        {{#agencyModalities}}
          <div class="column is-4">
            <h5 class="mb-2">{{modality.name}}</h5>
            {{#modalityRoutes}}
              <p class="mb-0">{{& longDisplayLinkHtml}}</p>
            {{/modalityRoutes}}
          </div>
        {{/agencyModalities}}
      </div>
    </div>
  {{/routes}}
{{/route}}
