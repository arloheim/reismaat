{{#route}}
  <div class="tile is-ancestor">
    <div class="tile is-5 is-parent">
      <div class="tile is-child box has-background-white">
        <h3 class="mb-4">{{> feed/route_long}}</h3>

        <h5 class="mb-2">Vervoerder</h5>
        <p>
          <a target="_blank" href="{{agency.url}}">{{agency.name}}</a>
        </p>

        {{#notifications.length}}
          <h5 class="mb-2">Meldingen</h5>

          {{#notifications}}
            {{> feed/notification}}
          {{/notifications}}
        {{/notifications.length}}
      </div>
    </div>

    <div class="tile is-7 is-parent">
      {{> tiles/route_stops}}
    </div>
  </div>
{{/route}}

{{^route}}
  <div class="box has-background-white">
    <h2 class="mb-2">
      <span class="icon-text">
        <span class="icon mr-4">
          <i class="fa-solid fa-timeline"></i>
        </span>
        <span>dienstregeling</span>
      </span>
    </h2>

    <p>Hier vind je informatie over trein, metro en tram en een overzicht van alle lijnen en vervoerders.</p>
  </div>

  {{#routes}}
    <div class="box has-background-white">
      <h4 class="mb-2">{{{agency.name}}}</h4>

      <div class="columns is-multiline">
        {{#agencyModalities}}
          <div class="column is-4">
            <h5 class="mb-2">{{modality.name}}</h5>
            {{#modalityRoutes}}
              <p class="mb-0">{{> feed/route_long}}</p>
            {{/modalityRoutes}}
          </div>
        {{/agencyModalities}}
      </div>
    </div>
  {{/routes}}
{{/route}}
