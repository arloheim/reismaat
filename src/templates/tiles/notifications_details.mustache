<div class="tile is-child box has-background-{{color}}-light">
  {{#typeName}}
    <p class="has-text-weight-bold has-text-{{color}}-dark mb-0">{{.}}</p>
  {{/typeName}}

  {{#name}}
    <h4 class="mt-0 mb-2">{{.}}</h4>
  {{/name}}

  {{#description}}
    <p>{{description}}</p>
  {{/description}}

  <div class="columns">
    {{#affectedNodes.length}}
      <div class="column is-4">
        <h5 class="mb-2">Getroffen stations</h5>

        {{#affectedNodes}}
          <p class="mb-0">{{> feed/node_long_link}}</p>
        {{/affectedNodes}}
      </div>
    {{/affectedNodes.length}}

    {{#affectedRoutes.length}}
      <div class="column is-4">
        <h5 class="mb-2">Getroffen lijnen</h5>
          {{#affectedRoutes}}
            <p class="mb-0">
              {{> feed/route_long_link }}
            </p>
          {{/affectedRoutes}}
        </ul>
      </div>
    {{/affectedRoutes.length}}

    {{#period}}
      <div class="column is-4">
        <h5 class="mb-2">Periode</h5>
        <p>{{period}}</p>
      </div>
    {{/period}}
  </div>
</div>
