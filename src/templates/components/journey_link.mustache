<div class="journey-link is-active">
  <a class="is-overlay" data-collapse="journey_{{index}}"></a>

  <div class="level is-mobile mb-2">
    <div class="level-left">
      <p class="level-item has-text-weight-bold">
        <span class="icon-text">
          <span>{{formattedDepartureTime}}</span>
          <span class="icon">
            <i class="fa-solid fa-arrow-right"></i>
          </span>
          <span>{{formattedArrivalTime}}</span>
        </span>
      </p>
    </div>

    <div class="level-right">
      <p class="level-item">
        <span class="icon-text">
          <span class="icon">
            <i class="fa-solid fa-clock"></i>
          </span>
          <span class="mr-2">{{formattedDuration}}</span>
          <span class="icon">
            <i class="fa-solid fa-repeat"></i>
          </span>
          <span>{{transfers}}</span>
        </span>
      </p>
    </div>
  </div>

  <p>
    {{#legs}}
      {{#route}}
        {{> feed/route_short}}
        {{^isLast}}&nbsp;+&nbsp;{{/isLast}}
      {{/route}}
    {{/legs}}
  </p>
</div>
