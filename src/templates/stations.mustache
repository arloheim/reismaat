{{#node}}
  <div class="box has-background-white">
    <h2 class="mb-0">
      <span class="icon-text">
        <span class="icon mr-4">
          <i class="fa-solid fa-{{icon}}"></i>
        </span>
        <span>{{name}}</span>
      </span>
    </h2>
  </div>

  <div class="tile is-ancestor">
    <div class="tile is-6 is-parent">
      <div class="tile is-child box has-background-white">
        <h3>dienstregeling</h3>

        <table class="table is-narrow">
          <tr>
            <th style="width:80%">Lijn</th>
            <th style="width:20%">Spoor</th>
          </tr>

          {{#nodeRoutes}}
            <tr>
              {{^stop.cancelled}}
                <td>{{& route.longDisplayLinkHtml}}</td>
                <td>{{stop.platform}}</td>
              {{/stop.cancelled}}

              {{#stop.cancelled}}
                <td>{{& route.longDisplayLinkHtml}} <span class="has-text-weight-bold has-text-danger-dark">(rijdt niet)</span></td>
                <td>&nbsp;</td>
              {{/stop.cancelled}}
            </tr>
          {{/nodeRoutes}}
        </table>
      </div>
    </div>

    <div class="tile is-6 is-parent">
      <div class="tile is-child box has-background-white">
        <h3>voorzieningen</h3>

        <p>To be uitgebreided</p>
      </div>
    </div>
  </div>
{{/node}}

{{^node}}
  <div class="box has-background-white">
    <h2 class="mb-2">
      <span class="icon-text">
        <span class="icon mr-4">
          <i class="fa-solid fa-circle-info"></i>
        </span>
        <span>stations</span>
      </span>
    </h2>

    <p>Bekijk vertrektijden en voorzieningen van de stations en haltes in Ihlane:</p>

    <div class="field has-addons mb-5">
      <div class="control is-expanded">
        <div class="dropdown is-fullwidth">
          <div class="dropdown-trigger">
            <input class="input node-input" type="text" placeholder="station, halte of plaats" id="node">
          </div>
        </div>
      </div>

      <div class="control">
        <a class="button is-dark">
          <span class="icon">
            <i class="fa-solid fa-magnifying-glass"></i>
          </span>
        </a>
      </div>
    </div>

    <p>Of ga direct naar deze stations:</p>

    <ul>
      <li><a href="/stations/nsb_arfo" data-navigo>Arloheim Forum</a></li>
      <li><a href="/stations/nsb_ar" data-navigo>Arloheim Centraal</a></li>
      <li><a href="/stations/nsb_arc" data-navigo>Arloheim Campus</a></li>
      <li><a href="/stations/nsb_av" data-navigo>Amsvorde Centraal</a></li>
    </ul>
  </div>
{{/node}}
